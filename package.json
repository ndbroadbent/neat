{
	"name": "neat",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"lint": "eslint . --max-warnings=0",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"typecheck": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"screenshot": "bun run scripts/screenshot.ts",
		"ci": "mkdir -p data && bun run db:migrate && bun run format:check && bun run lint && bun run typecheck && bun run test:coverage && bun run build"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.58.1",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/postcss": "^4.1.18",
		"@tailwindcss/typography": "^0.5.19",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^25.2.0",
		"@vitest/coverage-v8": "^4.0.18",
		"autoprefixer": "^10.4.24",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.3.0",
		"playwright": "^1.58.1",
		"postcss": "^8.5.6",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.48.2",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.18"
	},
	"dependencies": {
		"@sjsf/ajv8-validator": "^3.2.1",
		"@sjsf/basic-theme": "^3.2.1",
		"@sjsf/form": "^3.2.1",
		"@sveltejs/adapter-node": "^5.5.2",
		"ajv": "8",
		"better-sqlite3": "^11.9.1",
		"drizzle-orm": "^0.45.1",
		"marked": "^17.0.1",
		"nanoid": "^5.1.6",
		"pino": "^10.3.0"
	}
}
